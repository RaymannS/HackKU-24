{
    "manifest_version": 2,
    "name": "American Translator",
    "version": "1.0",
    "description": "Translate American slang, idioms, and emojis",
    "permissions": ["contextMenus", "activeTab", "tabs", "storage", "notifications"],
    "background": {
        "service_worker": "background.js",
        "peristent": false
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }], 
    "browser_action": {
        "default_popup": "popup.html"
    }
}